{% extends 'base.html.twig' %}

{% block title %}FeatureToggleController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        {% if feature_is_enabled('twig-feature-flag') %}
            <div>
                <h1>New Feature Content [Twig]</h1>
                <p>This content is only visible when the new feature is enabled.</p>
            </div>
        {% else %}
            <div>
                <h1>Old Feature Content [Twig]</h1>
                <p>This content is visible when the new feature is disabled.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
